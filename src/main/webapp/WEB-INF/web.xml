<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  <listener>
  <listener-class>SessionMonitor</listener-class>
  </listener>
  <servlet>
    <servlet-name>TestServlet</servlet-name>
    <servlet-class>TestServlet</servlet-class>
    <init-param>
      <param-name>serv1param</param-name>
      <param-value>s1</param-value>
    </init-param>
  </servlet>
  <servlet>
    <servlet-name>Servlet2</servlet-name>
    <servlet-class>Servlet2</servlet-class>
    <init-param>
      <param-name>serv2param</param-name>
      <param-value>s2</param-value>
    </init-param>
  </servlet>

  <servlet-mapping>
    <servlet-name>TestServlet</servlet-name>
    <url-pattern>/testserv</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>Servlet2</servlet-name>
    <url-pattern>/serv2</url-pattern>
  </servlet-mapping>
  <context-param>  
       <param-name>param1</param-name>  
       <param-value>Welcome to SpLessons</param-value>  
    </context-param>
    <context-param>  
       <param-name>param2</param-name>  
       <param-value>Welcome to Param2</param-value>  
    </context-param>
</web-app>
